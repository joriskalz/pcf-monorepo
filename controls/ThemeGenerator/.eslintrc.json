{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-hooks",
        "@typescript-eslint",
        "prettier",
        "sonarjs"
    ],
    "settings": {
        "react": {
          "pragma": "React",
          "version": "detect"
        }
      },
    "ignorePatterns": [
        "**/generated/*.ts",
        "ThemeGenerator/components",
        "ThemeGenerator/shared"
    ],
    "rules": {
        "prettier/prettier": "off",
        "no-unused-vars": "off",
        "no-undef": "off",
        "no-dupe-class-members": "off"
    }
}
